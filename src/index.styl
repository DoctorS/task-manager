*
  margin: 0
  padding: 0
  box-sizing border-box

html, body
  width: 100%
  height: 100%

body
  min-height: 100%
  padding: 20px
  color #666
  font 13px / 18px Montserrat, Tahoma, Arial, Sans-Serif

h1
  margin-bottom: 20px

h2
  margin-bottom: 15px

p
  margin-bottom: 10px

a
  color navy

label
  display: block

input, textarea
  min-width: 240px
  outline: none
  line-height: 24px
  padding: 0 3px
  font-size: 13px
  border 1px solid #9c9c9c

button
  outline: none
  padding: 0 20px
  cursor: pointer
  line-height: 24px
  font-size: 13px

.ok
  color #29806d

.error
  color #ff4413

.block
  margin-bottom: 20px

  > form
    margin-bottom: 15px

.items
  .item
    margin-bottom: 10px

.status
  span
    font-weight bold

  span, a
    margin-right: 15px
